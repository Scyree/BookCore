@model string
@inject IApplicationFollowLogic FollowService
@inject IApplicationPictureLogic PictureService

@{
    var followers = FollowService.GetFollowers(Model);
    <div class="row justify-content-center">
        <div class="col"><hr /></div>
        <div class="col-auto">
            <h5>Followers</h5>
        </div>
        <div class="col"><hr /></div>
    </div>
    <div class="row">
        @for (var index = 0; index < followers.Count; ++index)
        {
            var checkIndex = index + 1;
            var displayInfo = "<h4>" + followers[index].FirstName + " " + followers[index].LastName + "</h4><p>" + followers[index].Description + "</p>";
            <div class="col-md-3 col-3">
                <div class="card">
                    <a asp-action="Index" asp-route-username="@followers[index].User" data-toggle="tooltip" data-placement="right" data-html="true" title="@displayInfo">
                        <div class="row justify-content-center">
                            <img class="rounded-circle socialImage" src="@Url.Content("..\\..\\" + PictureService.GetFolderWithFile(followers[index].Id))" />
                        </div>
                        <div class="row justify-content-center">
                            <h7>/@followers[index].User</h7>
                        </div>
                    </a>
                </div>
            </div>

            if (checkIndex % 4 == 0)
            {
                <div class="w-100 socialRow"></div>
            }
        }
    </div>
}