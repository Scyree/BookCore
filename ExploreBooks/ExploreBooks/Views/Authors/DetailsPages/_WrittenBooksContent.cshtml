@model List<AuthorBook>
@inject IBookService BookService
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="container">
    <div class="row justify-content-center">
        <div class="col-5"><hr /></div>
        <div class="col-auto">
            <h5>Books</h5>
        </div>
        <div class="col-5"><hr /></div>
    </div>
    <div class="row">
        <div class="col-md-12 col-12 border border-top-0 border-bottom-0">
            @{
                var count = Model.Count;
                var max = (count - 1) / 8;
                <div id="favoriteBooks" class="carousel carousel-fade" data-ride="carousel">
                    <div class="carousel-inner">
                        @{
                            for (var divNumber = 0; divNumber <= max; ++divNumber)
                            {
                                var active = "";
                                if (divNumber == 0)
                                {
                                    active += " active";
                                }

                                if (divNumber == max)
                                {
                                    var difference = count - 8 * divNumber;
                                    <div class="carousel-item @active">
                                        <div class="row justify-content-center">
                                            @for (var index = 0; index < difference; ++index)
                                            {
                                                var currentIndex = index + 8 * divNumber;
                                                var book = BookService.GetBookById(Model[currentIndex].BookId);
                                                <div class="col-md-3 col-3 favoriteBooks">
                                                    <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id" data-toggle="tooltip" data-placement="right" data-html="true" title="@book.Title">
                                                        <img class="ml-1 rounded writtenBooks" src="@Url.Content("..\\..\\images\\" + book.Folder + "\\" + book.ImageName)" />
                                                    </a>
                                                </div>

                                                if (currentIndex % 4 == 0)
                                                {
                                                    <div class="w-100"></div>
                                                }
                                            }
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="carousel-item @active">
                                        <div class="row justify-content-center">
                                            @for (var index = 0; index < 4; ++index)
                                            {
                                                var currentIndex = index + 4 * divNumber;
                                                var book = BookService.GetBookById(Model[currentIndex].BookId);
                                                <div class="col-md-3 col-3 favoriteBooks">
                                                    <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id" data-toggle="tooltip" data-placement="right" data-html="true" title="@book.Title">
                                                        <img class="ml-1 rounded writtenBooks" src="@Url.Content("..\\..\\images\\" + book.Folder + "\\" + book.ImageName)" />
                                                    </a>
                                                </div>

                                                if (currentIndex % 4 == 0)
                                                {
                                                    <div class="w-100"></div>
                                                }
                                            }
                                        </div>
                                        <div class="row justify-content-center">
                                            @for (var index = 4; index < 8; ++index)
                                            {
                                                var currentIndex = index + 4 * divNumber;
                                                var book = BookService.GetBookById(Model[currentIndex].BookId);
                                                <div class="col-md-3 col-3 favoriteBooks">
                                                    <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id" data-toggle="tooltip" data-placement="right" data-html="true" title="@book.Title">
                                                        <img class="ml-1 rounded writtenBooks" src="@Url.Content("..\\..\\images\\" + book.Folder + "\\" + book.ImageName)" />
                                                    </a>
                                                </div>

                                                if (currentIndex % 4 == 0)
                                                {
                                                    <div class="w-100"></div>
                                                }
                                            }
                                        </div>
                                    </div>
                                }
                            }
                        }
                    </div>

                    @{
                        if (count > 4)
                        {
                            <a class="carousel-control-prev" href="#favoriteBooks" role="button" data-slide="prev">
                                <i class="fa fa-caret-left arrowWrittenBooks"></i>
                            </a>
                            <a class="carousel-control-next" href="#favoriteBooks" role="button" data-slide="next">
                                <i class="fa fa-caret-right arrowWrittenBooks"></i>
                            </a>
                        }
                    }
                </div>
            }
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-12"><hr /></div>
    </div>
</div>