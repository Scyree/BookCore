@model IEnumerable<Author>

@{
    ViewData["Title"] = "Index";
}

<environment include="Development">
    <link rel="stylesheet" href="~/css/Book.css" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
</environment>

<br />

<p>
    <h4>
        Discover all authors
    </h4>
    <a asp-action="Create">..or add a new one</a>
</p>
<div class="container">
    @{
        var authors = Model.ToList();
        <div class="row">
            @for (var index = 0; index < authors.Count; ++index)
            {
                var checkIndex = index + 1;
                var displayInfo = "<h4>" + authors[index].Name + "</h4><p>" + authors[index].Description + "</p>";

                <div class="col-md-3 col-3">
                    <a asp-action="Details" asp-route-id="@authors[index].Id" data-toggle="tooltip" data-placement="right" data-html="true" title="@displayInfo">
                        <img class="rounded" src="@Url.Content("images\\" + authors[index].Folder + "\\" + authors[index].ImageName)" />
                    </a>
                </div>

                if (checkIndex % 4 == 0)
                {
                    <div class="w-100"></div>
                }
            }
        </div>
    }
</div>

<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>