@model IEnumerable<Book>

@{
    ViewData["Title"] = "Index";
}

<environment include="Development">
    <link rel="stylesheet" href="~/css/Book.css" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
</environment>

<br/>

<p>
    <h4>
        Browse through all books
    </h4>
    <a asp-action="Create">..or add a new one</a>
</p>

<div class="container">
    @{
        var books = Model.ToList();
        <div class="row">
            @for (var index = 0; index < books.Count; ++index)
            {
                var checkIndex = index + 1;
                var displayInfo = "<h4>" + books[index].Title + "</h4><p>" + books[index].Description + "</p>";

                <div class="col-md-3 col-3">
                    <a asp-action="Details" asp-route-id="@books[index].Id" data-toggle="tooltip" data-placement="right" data-html="true" title="@displayInfo">
                        <img class="rounded" src="@Url.Content("..\\..\\images\\" + books[index].Folder + "\\" + books[index].ImageName)"/>
                    </a>  
                </div>

                if (checkIndex % 4 == 0)
                {
                    <div class="w-100"></div>
                }
            }
        </div>
    }
</div>

<script>
    $(document).ready(function() {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>