@model ChangePictureViewModel

@{
    ViewData["Title"] = "Change picture";
    ViewData.AddActivePage(ManageNavPages.ChangePicture);
}

@Html.Partial("_StatusMessage", Model.StatusMessage)

<div class="container">
    <br />
    <div class="row">
        <p class="mx-auto mw-100">
            <strong>
                Upload a picture
            </strong>
        </p>
    </div>
    <div class="row justify-content-center">
        <img class="rounded changePicture" src="@Url.Content("..\\images\\" + Model.Folder + "\\" + Model.ImageName)" />
    </div>
    <div class="row justify-content-center">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label for="file" class="fileUpload">Select a new picture</label>
                <input type="file" id="file" asp-for="Image" class="form-control" />
            </div>
            <div class="form-group row">
                <button type="submit" class="btn btn-save form-control">Upload it</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
