@model IndexViewModel
@{
    ViewData["Title"] = "Profile";
    ViewData.AddActivePage(ManageNavPages.Index);
}

@Html.Partial("_StatusMessage", Model.StatusMessage)

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <label class="col-4 col-md-4 col-form-label" asp-for="FirstName"></label>
            <div class="col-8 col-md-8 ml-auto">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-4 col-md-4 col-form-label" asp-for="LastName"></label>
            <div class="col-8 col-md-8 ml-auto">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-4 col-md-4 col-form-label" asp-for="Country"></label>
            <div class="col-8 col-md-8 ml-auto">
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
        </div>
        <hr />
        <div class="form-group row">
            <label class="col-4 col-md-4 col-form-label" asp-for="Username"></label>
            <div class="col-8 col-md-8 ml-auto">
                <input asp-for="Username" class="form-control" readonly />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-4 col-md-4 col-form-label" asp-for="Email"></label>
            <div class="col-8 col-md-8 ml-auto">
                <input asp-for="Email" class="form-control" readonly />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Description">Describe yourself in few words..</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="form-group row">
            <button type="submit" class="btn actionButton w-100">Update profile</button>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
