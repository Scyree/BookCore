@using ExploreBooks.Views.Manage
@model IndexViewModel
@{
    ViewData["Title"] = "Settings";
    ViewData.AddActivePage(ManageNavPages.Index);
}

<div class="row">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <label class="col-4 col-md-4 col-form-label" asp-for="FirstName"></label>
            <div class="col-8 col-md-8 ml-auto">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-4 col-md-4 col-form-label" asp-for="LastName"></label>
            <div class="col-8 col-md-8 ml-auto">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-4 col-md-4 col-form-label" asp-for="Country"></label>
            <div class="col-8 col-md-8 ml-auto">
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
        </div>
        <hr/>
        <div class="form-group row">
            <label class="col-4 col-md-4 col-form-label" asp-for="Username"></label>
            <div class="col-8 col-md-8 ml-auto">
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="form-group row">
                <label class="col-4 col-md-4 col-form-label" asp-for="Email"></label>
                <div class="col-8 col-md-8 ml-auto">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                @if (Model.IsEmailConfirmed)
                {
                }
                else
                {
                    <button asp-action="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                }
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-default">Save</button>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
