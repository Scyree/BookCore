@inject IUtilityService UtilityService
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="dropdown-menu">
    @if (SignInManager.IsSignedIn(User))
    {
        var userId = UserManager.GetUserId(User);
        <a class="dropdown-item" asp-area="" asp-controller="Books" asp-action="Details" asp-route-id="@UtilityService.GetRecommendedBookId(Guid.Parse(userId))">Recommendation</a>
    }
    else
    {
        <a class="dropdown-item" asp-area="" asp-controller="Books" asp-action="Details" asp-route-id="@UtilityService.GetBestRatedBooks()">Recommendation</a>
    }
    
    <a class="dropdown-item" asp-controller="Books" asp-action="Details" asp-route-id="@UtilityService.GetRandomBookId()">Random book</a>
</div>