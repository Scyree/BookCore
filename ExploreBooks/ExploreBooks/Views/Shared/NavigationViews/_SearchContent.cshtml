@inject IBookService BookService

<environment include="Development">
    <link rel="stylesheet" href="~/css/SearchContent.css" />
</environment>

<form asp-controller="Books" asp-action="Search" class="form-inline searchForum dropdown-toggle" role="form" method="get" data-toggle="dropdown">
    <div class="input-group" id="searchBar">
        <input type="text" class="form-control border border-right-0" name="searchOption" placeholder="Search for books..." aria-label="Search" id="searchOption" onkeyup="searchContent()" autocomplete="off" />
        <div class="input-group-append">
            <span class="input-group-text" id="searchIcon">
                <i class="fa fa-search "></i>
            </span>
        </div>
    </div>
</form>

<div class="dropdown-menu displayDivWithSearchOptions" id="displayDivWithSearchOptions">
    <ul id="searchOptions">
        @foreach (var book in BookService.GetAllBooks())
        {
            <li>
                <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id">
                    <img class="rounded searchImage" src="@Url.Content("~/images/" + book.Folder + "/" + book.ImageName)" /> @book.Title
                </a>
            </li>
        }
    </ul>
    <h7 id="noResult" class="ml-2">
        No results found :(
    </h7>
</div>