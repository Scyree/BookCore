@model Recommendation
@inject IApplicationUserServices Service
@inject IUtilityService UtilityService

@{
    var recommendedDetails = "recommendedDetails" + Model.Id;
    var recommendedBook = UtilityService.GetBookById(Model.BookRecommended);
    var book = UtilityService.GetBookById(Model.BookId);
}

<div class="modal fade" id="@recommendedDetails">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header text-center">
                <p class="modal-title mx-auto mw-100">
                    <strong>
                        Recommendation
                    </strong>
                </p>
            </div>
            <div class="modal-body">
                <div class="row justify-content-center">
                    @recommendedBook.Title -> @book.Title
                </div>
            </div>
        </div>
    </div>
</div>