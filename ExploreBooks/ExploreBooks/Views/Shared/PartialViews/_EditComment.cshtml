@model Guid
@inject IApplicationUserServices Service
@inject IUtilityService UtilityService

@{
    var editModal = "editModal" + Model;
}

<div class="modal fade" id="@editModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header text-center">
                <p class="modal-title mx-auto mw-100">
                    <strong>
                        Edit your comment
                    </strong>
                </p>
            </div>
            <div class="modal-body">
                <div class="row justify-content-center">
                    <form asp-controller="Comments" asp-action="Edit" class="submitCommentEdit" role="form">
                        @Html.Hidden("commentId", Model)
                        @Html.Hidden("postId", UtilityService.GetCommentById(Model).PostId)
                        <div class="form-group row">
                            <div class="col-4 col-md-4">
                                <img class="rounded" id="editPicture" src="@Url.Content("..\\..\\" + Service.GetFolderWithFile(UtilityService.GetCommentById(Model).UserId.ToString()))" />
                            </div>
                            <div class="col-8 col-md-8 ml-auto">
                                <textarea type="text" class="form-control" name="commentText"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn editButton">Edit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>