@model Book
@inject IUtilityService UtilityService
@inject IRecommendationService Service

<div class="container">
    <div class="row">
        @{
            var recommendedBooks = Service.GetAllRecommendationsForBookId(Model.Id);

            if (recommendedBooks != null)
            {
                foreach (var recommendedBook in recommendedBooks)
                {
                    var book = UtilityService.GetBookById(recommendedBook.BookRecommended);
                    var recommendedDetails = "recommendedDetails" + recommendedBook.Id;

                    <a href="#" data-toggle="modal" data-target="#@recommendedDetails">
                        <img class="rounded" src="@Url.Content("..\\..\\images\\" + book.Folder + "\\" + book.ImageName)" />
                    </a>
                    
                    @Html.Partial("PartialViews/_RecommendationDetails", recommendedBook)
                }
            }
            else
            {
                <h5>
                    For the moment there are no recommendations!
                </h5>
            }
        }
    </div>
</div>


