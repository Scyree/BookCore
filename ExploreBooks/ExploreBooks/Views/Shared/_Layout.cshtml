<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link id="titleImage" rel="icon" href="/exploreBooksIcon.png"/>
    <title>@ViewData["Title"] - ExploreBooks</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link id="normal" rel="stylesheet" href="~/css/Layout.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
        <link rel="stylesheet" href="~/lib/bootstrap-select-1.13.0/css/bootstrap-select.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/Layout.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-primary navbar-dark fixed-top">
        <div class="container">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">
                <img id="logoPicture" src="@Url.Content("~/images/ExploreBooks.png")"/>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarDropdown" aria-expanded="false">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarDropdown">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown">Explore</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-controller="Authors" asp-action="Index">Authors</a>
                            <a class="dropdown-item" asp-controller="Books" asp-action="Index">Books</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="BookLists" asp-action="Index">List of books</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Users" asp-action="AllUsers">People</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown">Find me a book</a>
                        @{
                            @await Html.PartialAsync("NavigationViews/_FindMeABook")
                        }
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        @{
                            @await Html.PartialAsync("NavigationViews/_SearchContent")
                        }
                    </li>
                </ul>

                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        <br />
        <br />
        @RenderBody()
    </div>
    <div class="generalFooter">
        <div class="container">
            <hr/>
        </div>
    </div>
    
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/PostsDisplay.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/Books/Modify.js"></script>
        <script src="~/lib/bootstrap-select-1.13.0/js/bootstrap-select.js"></script>
        <script>
            function DeletePost(post, target) {
                $.ajax({
                    url: "/CommunityFeedback/DeletePost",
                    data: { id: post },
                    type: "POST",
                    success: function () {
                        var result = "@Url.Action("GetAllPostsForTargetId", "CommunityFeedback")?targetId=" + target;
                        var deleteModal = "#deleteModal" + post;
                        $("#" + target).load(result);
                        $(".modal-backdrop").remove();
                        $("body").removeClass("modal-open");
                        $(deleteModal).hide();
                    }
                });
            }

            function DeleteComment(target, post) {
                $.ajax({
                    url: "/CommunityFeedback/DeleteComment",
                    data: { id: target },
                    type: "POST",
                    success: function () {
                        var result = "@Url.Action("GetAllCommentsForPostId", "CommunityFeedback")?postId=" + post;
                        var deleteModal = "#deleteModal" + target;
                        $("#" + post).load(result);
                        $(".modal-backdrop").remove();
                        $("body").removeClass("modal-open");
                        $(deleteModal).hide();
                    }
                });
            }

            $(".submitPost").submit(function(e) {
                e.preventDefault();
                var user = this.userId.value;
                var target = this.targetId.value;
                var post = $(this).find("input[name='postText']").val();
                $.ajax({
                    url: "/CommunityFeedback/CreatePost",
                    data: { userId: user, targetId: target, postText: post },
                    type: "POST",
                    success: function() {
                        var result = "@Url.Action("GetAllPostsForTargetId", "CommunityFeedback")?targetId=" + target;
                        $("#" + target).load(result);
                        $(".submitPost").trigger("reset");
                        $(":focus").blur();
                    }
                });
            });

            $(".submitChapter").submit(function (e) {
                e.preventDefault();
                var user = this.userId.value;
                var book = this.bookId.value;
                var chapter = $(this).find("input[name='chapters']").val();
                $.ajax({
                    url: "/Users/ChapterBook",
                    data: { bookId: book, userId: user, chapters: chapter },
                    type: "POST",
                    success: function () {
                        location.reload();
                    }
                });
            });

            $(".submitUserProgress").submit(function (e) {
                e.preventDefault();
                var user = this.userId.value;
                var book = this.bookId.value;
                var pages = $(this).find("input[name='pages']").val();
                $.ajax({
                    url: "/Users/ModifyBookPages",
                    data: { bookId: book, userId: user, numberOfPages: pages },
                    type: "POST",
                    success: function () {
                        location.reload();
                    }
                });
            });
        </script>
        <script>
            $(document).ready(function () {
                $('[data-toggle="tooltip"]').tooltip();
                $('.selectpicker').selectpicker();
            });
        </script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>