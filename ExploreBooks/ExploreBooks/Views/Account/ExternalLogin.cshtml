@model ExternalLoginViewModel

@{
    ViewData["Title"] = "Register";
}

<environment include="Development">
    <link rel="stylesheet" href="~/css/Account/ExternalLogin.css" />
</environment>

<div class="container">
    <div class="modal fade" id="externalLoginModal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <p class="modal-title mx-auto mw-100">
                        <strong>
                            Success - Connected with @ViewData["LoginProvider"]
                        </strong>
                    </p>
                </div>
                <div class="modal-body mx-auto">
                    <div class="row">
                        <p class="mx-auto mw-100">
                            <strong>
                                The last step is to pick a username and a valid email
                            </strong>
                        </p>
                    </div>
                    <div class="row justify-content-center">
                        <form asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group row">
                                <label class="col-4 col-md-4 col-form-label" asp-for="User"></label>
                                <div class="col-8 col-md-8 ml-auto">
                                    <input asp-for="User" class="form-control"/>
                                    <span asp-validation-for="User" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-4 col-md-4 col-form-label" asp-for="Email"></label>
                                <div class="col-8 col-md-8 ml-auto">
                                    <input asp-for="Email" class="form-control"/>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn" id="registerButton">Register</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
       
@section Scripts {
    <script type="text/javascript" src="~/js/Account/ExternalLogin.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
